<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xdjbx.bench.ui.fragment.WifiFragment">

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifi_list"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wifiListRecyclerView"
        android:name="com.xdjbx.bench.ui.fragment.WifiFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.xdjbx.bench.ui.fragment.WifiFragment"
        tools:listitem="@layout/fragment_wifi" />


</RelativeLayout>
